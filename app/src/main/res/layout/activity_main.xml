<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:id="@+id/drawer_layout"
    tools:context=".MainActivity"
    android:background="@color/appBackground"
    >

    <!-- this is the layout over which drawer appears -->
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/contentFrame"
    >

<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBackground"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relLayout1"

        >

        <include layout="@layout/apptoolbar_snippet"></include>

    </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/relLayout2"
            android:layout_below="@id/relLayout1"
            android:padding="30dp"
            android:visibility="visible"

            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/getdata_container"
                android:background="@drawable/layout_getdata_container"
                android:padding="0dp"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"

                    android:id="@+id/get_data_heading"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="PROVIDE DATA"
                        android:textSize="16sp"
                        android:padding="5dp"
                        android:gravity="center_horizontal"

                        />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/get_data_heading"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="20dp"
                    android:paddingTop="0dp"
                    >

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:defaultFocusHighlightEnabled="true"
                        android:maxLength="5"
                        android:id="@+id/etAmount"
                        android:background="@drawable/input__styles"
                        android:padding="15dp"
                        android:inputType="number"
                        android:hint="Enter the amount contributed">


                    </EditText>


                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:maxLength="2"
                        android:layout_below="@+id/etAmount"
                        android:id="@+id/etNumberOfPeople"
                        android:padding="15dp"
                        android:background="@drawable/input__styles"
                        android:hint="Number of people"
                        android:inputType="number"
                        />

                </RelativeLayout>

            </RelativeLayout>


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="00dp"
                android:background="@drawable/next_button_layout"
                android:padding="10dp"
                android:text="NEXT"
                android:id="@+id/next"
                android:textSize="16sp"
                android:layout_below="@+id/getdata_container"
                />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/relLayout1"
            android:padding="30dp"
            android:id="@+id/relLayout3"
            android:visibility="gone"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/peopleContainerCardview"
                android:background="@drawable/layout_peopledata_container"
                android:orientation="vertical"
                android:weightSum="10"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                   android:padding="15dp"
                    android:id="@+id/people_container_heading"
                    android:layout_weight="1"
                    >

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/goBackButton"
                        android:background="@color/white"
                        android:src="@drawable/back_arrow"
                        android:padding="10dp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Enter name and amount"
                        android:textSize="16sp"
                        android:layout_centerInParent="true"
                        android:gravity="center_horizontal"

                        />

                </RelativeLayout>

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/peopleScrollView"
                    android:layout_below="@+id/people_container_heading"
                    android:layout_weight="9"
                    android:isScrollContainer="false"
                    >


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="20dp"
                        android:id="@+id/peopleContainerLayout"
                        android:orientation="vertical"
                        >


                    </LinearLayout>

                </ScrollView>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/next_button_layout"
                    android:padding="20dp"
                    android:text="CALCULATE"
                    android:id="@+id/calculateBtn"
                    android:textSize="14sp"
                    android:layout_weight="1"
                    android:layout_alignParentBottom="true"
                    />

            </LinearLayout>

            </RelativeLayout>



        </RelativeLayout>

        <FrameLayout
            android:layout_width="320dp"
            android:layout_height="match_parent"
            android:layout_marginStart="0dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/relLayout1"
            android:id="@+id/calculatorContainer"
            android:visibility="gone"
            >



        </FrameLayout>

    </RelativeLayout>



</android.support.constraint.ConstraintLayout>

</FrameLayout>



    <!-- Container for contents of drawer - use NavigationView to make configuration easier -->
    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/drawer_menu"
        />



</android.support.v4.widget.DrawerLayout>

